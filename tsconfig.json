{
	"compilerOptions": {
		"target": "ES6",
		"moduleResolution": "Bundler",
		"lib": ["ES6", "DOM"],
		"isolatedModules": true,
		"declaration": true,
		"outDir": "dist",
		"checkJs": true,
		"allowJs": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"],
	"exclude": ["src/cli.js", "dist", "node_modules"]
}
